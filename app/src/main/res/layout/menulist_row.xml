<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginBottom="10dp"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_margin="2dp"


    android:layout_marginTop="60dp">

    <RelativeLayout
        android:id="@+id/layout_menu"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp">

<!--        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder" />-->

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#323ace"
            android:text="title"
            android:layout_marginLeft="46dp"
            android:textSize="25sp"

            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="46dp" />

    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearitemprice"
        android:layout_alignBottom="@+id/title"
        android:layout_toLeftOf="@+id/editMenu"
        android:layout_toStartOf="@+id/editMenu">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Rs"
            android:textColor="#219e21"
            android:textSize="23dp"
            android:id="@+id/textView13"
             />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#219e21"
            android:text="price"
            android:layout_marginRight="16dp"
            android:textSize="25sp"
            />
    </LinearLayout>
        <ImageButton
            android:id="@+id/editMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/editfilled"
            android:contentDescription="@string/editBtn"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="#00ffffff"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp" />




    </RelativeLayout>
</android.support.v7.widget.CardView>