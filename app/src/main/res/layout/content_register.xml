<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/slqsm"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.bille.app.merchant.Register"
    tools:showIn="@layout/activity_register">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="14"
        android:textColorHint="#fff"
        android:id="@+id/editText_name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:hint="Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="14"
        android:textColorHint="#fff"
        android:id="@+id/editText_company"
        android:layout_below="@+id/editText_name"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:hint="Company Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="14"
        android:textColorHint="#fff"
        android:id="@+id/editText_email"
        android:layout_below="@+id/editText_company"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:hint="E-Mail" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="14"
        android:textColorHint="#fff"
        android:id="@+id/editText_mobile"
        android:layout_below="@+id/editText_email"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:hint="Mobile No." />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:longClickable="false"
        android:text="Submit Request"
        android:id="@+id/button_submit"
        android:layout_below="@+id/editText_mobile"
        android:layout_marginTop="60dp"
        android:layout_alignRight="@+id/editText_mobile"
        android:layout_alignEnd="@+id/editText_mobile"
        android:layout_alignLeft="@+id/editText_mobile"
        android:layout_alignStart="@+id/editText_mobile" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register Now..."
        android:textColor="#fbfcfb"
        android:textStyle="bold"
        android:textSize="24sp"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
