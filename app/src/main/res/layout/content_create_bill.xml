<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar" android:id="@+id/tool"/>
    <view
        android:id="@+id/recycler_view_bill"
        class="android.support.v7.widget.RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tool"/>


        <Button android:layout_width="match_parent"
            android:layout_height="wrap_content" android:text="Checkout"
            android:id="@+id/sendBill"
            android:layout_toEndOf="@id/recycler_view_bill"
            android:layout_toRightOf="@id/recycler_view_bill"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

<!--    <ProgressBar
        android:id="@+id/progress_bar_bill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>-->
</RelativeLayout>
